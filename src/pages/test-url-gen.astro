// Test semplice per verificare la generazione URL
const testUrl = 'https://images.unsplash.com/photo-1516975080664-ed2fc6a32937';
const params = new URLSearchParams();
params.set('url', testUrl);
params.set('output', 'webp');
params.set('w', '400');
params.set('q', '80');
params.set('fit', 'cover');
const generatedUrl = `https://images.weserv.nl/?${params.toString()}`;


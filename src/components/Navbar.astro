  justify-content: space-between;
  align-items: center;
  padding: 25px;
  border-bottom: 1px solid rgba(212, 175, 55, 0.3);
  background: rgba(212, 175, 55, 0.1);
}

.mobile-menu-title {
  font-size: 16px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: #d4af37;
}

.mobile-menu-close {

  .kelua-hero-tab {
    font-size: 1rem;
  }
  
  .kelua-hero-tabs {
    height: 150px; /* Ridotta da 180px per schermi grandi */
  }
  
  .logo-section {
    height: 110px; /* 150px - 40px = 110px spazio disponibile */
  }
  
  .kelua-hero-tabs .hero-logo {
    height: 160px; /* Aumentata da 150px per schermi grandi */
  }
}
